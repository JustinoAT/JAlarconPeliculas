@{
}


<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>

<h2 class="h2">Cines</h2>
<br>
@using (Html.BeginForm("GetAll", "Cine", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <td><a class="btn btn-warning" href="@Url.Action("Form", "Cine")"><i class="fa-solid fa-film"></i> Agregar cine.</a></td>
    <br>
<div class="table-responsive">
    <br>
    <div class="container">
        <table class="table table-striped table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>Actualizar</th>
                    <th>IdCine</th>
                    <th>Nombre</th>
                    <th>Direccion</th>
                    <th>IdZona</th>
                    <th>Ventas</th>
                    <th>Borrar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Cine cine in Model.Cines)
                {
                    <tr>
                            <td><a class="btn btn-primary" href="@Url.Action("Form", "Cine", new {IdCine = cine.IdCine})" )"><i class="bi bi-vector-pen"></i></a></td>
                        <td>@cine.IdCine</td>
                        <td>@cine.Nombre</td>
                        <td>@cine.Direccion</td>
                        <td>@cine.Zona.IdZona</td>
                        <td>@cine.Ventas</td>
                        <td><a class="btn btn-danger" href="@Url.Action("Delete", "Cine", new {IdCine = cine.IdCine})" onclick="return confirm('Seguro que quieres borrar la materia?' )"><i class="fa fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}
<script type="text/javascript">
    let table = new DataTable('#myTable', {
        responsive: true,
        "lengthMenu": [[5, 10, 15, 20, -1], [5, 10, 15, 20, "Todos"]],
        searching: false,
        language: {
            url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json",
        },
    });
</script>
